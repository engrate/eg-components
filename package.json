{
  "name": "eg-components",
  "version": "0.0.1",
  "description": "Engrate Component Library",
  "type": "module",
  "main": "./dist/eg-components.cjs.js",
  "module": "./dist/eg-components.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/eg-components.es.js",
      "require": "./dist/eg-components.cjs.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.preset": {
      "types": "./dist/tailwind.preset.d.ts",
      "import": "./dist/eg-components.es.js",
      "require": "./dist/eg-components.cjs.js"
    },
    "./fonts/*": "./dist/fonts/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "verify": "npm run test:run && npm run lint:fix && npm run format:check && npm run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/engrate/eg-components.git"
  },
  "keywords": [
    "react",
    "components",
    "tailwind",
    "engrate"
  ],
  "author": "Olof Kihlberg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/engrate/eg-components/issues"
  },
  "homepage": "https://github.com/engrate/eg-components#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@fontsource/libre-baskerville": "5.2.10",
    "@fontsource/work-sans": "5.2.8",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "1.2.6",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@storybook/addon-a11y": "10.2.1",
    "@storybook/react-vite": "10.2.1",
    "@tailwindcss/forms": "0.5.11",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.1.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.18",
    "autoprefixer": "10.4.23",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "jsdom": "27.4.0",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "storybook": "10.2.1",
    "tailwindcss": "^3.4.19",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18",
    "vitest-axe": "1.0.0-pre.5"
  }
}
